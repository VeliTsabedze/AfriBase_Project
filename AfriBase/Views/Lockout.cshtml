@{
    ViewData["Title"] = "Account Locked";
}

<div class="container text-center py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="mb-4">
                <i class="fas fa-lock text-warning fa-5x mb-3"></i>
                <h1 class="display-4 mb-3">Account Locked</h1>
                <p class="lead">Your account has been temporarily locked due to multiple failed login attempts.</p>
            </div>

            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <p class="mb-4">For your security, we've temporarily locked your account. Please wait a few minutes before trying again, or reset your password using the link below.</p>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary me-md-2">
                            <i class="fas fa-home me-1"></i> Return Home
                        </a>
                        <a asp-controller="Account" asp-action="ForgotPassword" class="btn btn-primary">
                            <i class="fas fa-key me-1"></i> Reset Password
                        </a>
                    </div>
                </div>
            </div>

            <div class="text-muted">
                <p>If you need assistance, please contact <a href="mailto:support@afribase.com">support@afribase.com</a></p>
            </div>
        </div>
    </div>
</div>