@model AfriBase.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm border-0">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <img src="~/images/afribase-logo.png" alt="AfriBase Logo" height="80" class="mb-3" />
                    <h2 class="text-afribase">Reset Password</h2>
                    <p class="text-muted">Enter your email and create a new password</p>
                </div>

                <form class="form-afribase" asp-controller="Account" asp-action="ResetPassword" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input asp-for="Code" type="hidden" />

                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" placeholder="Email" autocomplete="username" />
                        <label asp-for="Email">Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Password" class="form-control" placeholder="Password" autocomplete="new-password" />
                        <label asp-for="Password">New Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" autocomplete="new-password" />
                        <label asp-for="ConfirmPassword">Confirm Password</label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 mb-3">
                        <button type="submit" class="btn btn-afribase btn-lg">Reset Password</button>
                    </div>

                    <div class="text-center">
                        <a asp-controller="Account" asp-action="Login" class="text-decoration-none">Back to Login</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}