@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm border-0">
            <div class="card-body p-5 text-center">
                <div class="mb-4">
                    <i class="fas fa-envelope-open-text text-success fa-4x mb-3"></i>
                    <h2 class="text-afribase">Check Your Email</h2>
                    <p class="lead">Password reset instructions sent</p>
                </div>

                <p class="mb-4">We've sent an email with instructions to reset your password. Please check your email inbox and follow the link provided to complete the password reset process.</p>

                <div class="alert alert-info mb-4">
                    <i class="fas fa-info-circle me-2"></i>
                    <span>If you don't receive an email within a few minutes, please check your spam folder.</span>
                </div>

                <div class="d-grid gap-2">
                    <a asp-controller="Account" asp-action="Login" class="btn btn-afribase">Return to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>