@{
    ViewData["Title"] = "Access Denied";
}

<div class="container text-center py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="mb-4">
                <i class="fas fa-exclamation-triangle text-danger fa-5x mb-3"></i>
                <h1 class="display-4 mb-3">Access Denied</h1>
                <p class="lead">You do not have permission to access this resource.</p>
            </div>

            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <p class="mb-4">This area may be restricted to users with specific roles or permissions. If you believe you should have access to this page, please contact an administrator.</p>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary me-md-2">
                            <i class="fas fa-home me-1"></i> Return Home
                        </a>
                        <a href="javascript:history.back()" class="btn btn-primary">
                            <i class="fas fa-arrow-left me-1"></i> Go Back
                        </a>
                    </div>
                </div>
            </div>

            <div class="text-muted">
                <p>If you need assistance, please contact <a href="mailto:support@afribase.com">support@afribase.com</a></p>
            </div>
        </div>
    </div>
</div>