@model AfriBase.ViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <img src="~/images/afribase-logo.png" alt="AfriBase Logo" height="80" class="mb-3" />
                    <h2 class="text-afribase">Forgot Password</h2>
                    <p class="text-muted">Enter your email to receive password reset instructions</p>
                </div>

                <form class="form-afribase" asp-controller="Account" asp-action="ForgotPassword" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-floating mb-4">
                        <input asp-for="Email" class="form-control" placeholder="Email" autocomplete="username" />
                        <label asp-for="Email">Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 mb-3">
                        <button type="submit" class="btn btn-afribase btn-lg">Reset Password</button>
                    </div>

                    <div class="text-center">
                        <a asp-controller="Account" asp-action="Login" class="text-decoration-none">Back to Login</a>
                    </div>
                </form>
            </div>
        </div>

        <div class="card bg-light border-0">
            <div class="card-body p-4">
                <h4 class="h5 mb-3">Password Recovery Instructions</h4>
                <p class="mb-0">Enter the email address associated with your account, and we'll send you a link to reset your password. If you don't receive an email within a few minutes, please check your spam folder.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}