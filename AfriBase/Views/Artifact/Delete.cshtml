@model AfriBase.Models.Artifact

@{
    ViewData["Title"] = "Delete Artifact";
}

<div class="container">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Artifact" asp-action="Index">Artifacts</a></li>
            <li class="breadcrumb-item"><a asp-controller="Artifact" asp-action="Details" asp-route-id="@Model.ArtifactId">@Model.Name</a></li>
            <li class="breadcrumb-item active" aria-current="page">Delete</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <h1 class="card-title h3 mb-4 text-center border-pattern">Delete Artifact</h1>

                    <div class="alert alert-danger mb-4">
                        <h5 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i>Warning!</h5>
                        <p>Are you sure you want to delete this artifact? This action cannot be undone.</p>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-5">
                            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded shadow-sm mb-3">
                        </div>
                        <div class="col-md-7">
                            <h4>@Model.Name</h4>
                            <p class="text-muted mb-1">@Model.Category • @Model.Region</p>
                            <p class="text-muted mb-3">@Model.Origin, Est. Year: @Model.EstimatedYear</p>

                            <div class="d-flex mb-2">
                                <span class="fw-bold me-2">Condition:</span>
                                <span>@Model.Condition</span>
                            </div>

                            <div class="d-flex mb-2">
                                <span class="fw-bold me-2">Estimated Value:</span>
                                <span>$@Model.EstimatedValue.ToString("N2")</span>
                            </div>

                            <div class="d-flex mb-2">
                                <span class="fw-bold me-2">Date Added:</span>
                                <span>@Model.DateAdded.ToString("MMM dd, yyyy")</span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <h5>Description</h5>
                        <p>@Model.Description</p>
                    </div>

                    @if (Model.Bids.Any())
                    {
                        <div class="alert alert-warning mb-4">
                            <i class="fas fa-info-circle me-2"></i>
                            <span>This artifact has @Model.Bids.Count bids associated with it. Deleting this artifact will also delete all bids.</span>
                        </div>
                    }

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="ArtifactId" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Details" asp-route-id="@Model.ArtifactId" class="btn btn-outline-secondary me-md-2">Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>